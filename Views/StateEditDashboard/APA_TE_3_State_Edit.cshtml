@model APATools.Models.A_APA_TE_3

@{
    ViewBag.Title = "APA TE-3";
}

<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Entry of APA-TE-3</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    GP Dashboard of @if (ViewBag.GPName != null)
                    {
                        <small>@ViewBag.GPName</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <form asp-action="APA_TE_3_State_Edit" asp-controller="StateEditDashboard" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="number" asp-for="ID" hidden />
                    <div class="row">
                        <h4 class="col-form-label col-md-5 col-sm-5">APA-TE-3 Entry</h4>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                GP Code <span class=""></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input asp-for="GPCode" class="form-control col-form-label" readonly value="@Model.GPCode" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Financial Year <span class=""></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <select asp-for="FYCode" class="form-control col-form-label" id="schemetype" >
                                    <option selected value="@Model.FYCode">@ViewBag.FYName</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                First Page of every Meeting Resolution (Max 25 MB)<span class=""></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" asp-for="MeetingResolutionUpload" class="form-control col-form-label"  />
                                <a asp-action="Download" asp-controller="StateDashboard"
                                   asp-route-filename="@Model.MeetingResolutionUpload_path" class="btn-sm text-primary col-form-label">Download</a>
                                <span>@Html.ValidationMessageFor(model => model.MeetingResolutionUpload, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                GP tp Upload Signed Copy of Declaration Annexure -5  (Max 10 MB)<span class=""></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" class="form-control col-form-label" asp-for="GPDeclarationUpload"  />
                                <a asp-action="Download" asp-controller="StateDashboard"
                                   asp-route-filename="@Model.GPDeclarationUpload_path" class="btn-sm text-primary col-form-label">Download</a>
                                <span>@Html.ValidationMessageFor(model => model.GPDeclarationUpload, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total No. of Meetings Conducted during April 2024 to March 2025<span class=""></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" asp-for="TotalNoofMeetingsConducted" class="form-control col-form-label"  />
                                <span>@Html.ValidationMessageFor(model => model.TotalNoofMeetingsConducted, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class=""></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="submit" class="btn btn-success" value="Submit" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class=""></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>