@model APATools.Models.A_APA_TE_17

@{
    ViewBag.Title = "APA-TE_17";
}

<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Entry of APA-TE-17</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    GP Dashboard of @if (ViewBag.GPName != null)
                    {
                        <small>@ViewBag.GPName</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <form asp-action="APA_TE_17_State_Edit" asp-controller="StateEditDashboard" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="number" asp-for="ID" hidden />
                    <div class="row">
                        <h4 class="col-form-label col-md-5 col-sm-5">APA-TE-17 Entry</h4>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                GP Code <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" class="form-control col-form-label" readonly value="@Model.GPCode" name="GPCode" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Financial Year <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <select name="FYCode" class="form-control col-form-label" id="schemetype" required="required">
                                    <option selected value="@Model.FYCode">@ViewBag.FYName</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total no of Meetings / Awareness Campaigns on Women / Child / Climate / Social Issues Conducted in 2024-25<span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" asp-for="TotalMeetingConducted202425" id="totalMeeting" class="form-control col-form-label"  />
                                <span id="error" class="text-danger"></span>
                                <span>@Html.ValidationMessageFor(model => model.TotalMeetingConducted202425, "", new { @class = "text-danger" }) </span>
                                <span class="text-danger">@Model.TotalMeetingConducted202425</span>
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Upload of Meeting / Awareness campaigns details highlighting the Women / Child / Climate / Social Issues (.pdf format / Max 5 MB)<span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" asp-for="UploadMeetingResolutionConducted202425" class="form-control col-form-label"  />
                                <a asp-action="Download" asp-controller="StateDashboard"
                                   asp-route-filename="@Model.UploadMeetingResolutionConducted202425_Path" class="btn-sm text-primary col-form-label">Download</a>
                                <span>@Html.ValidationMessageFor(model => model.UploadMeetingResolutionConducted202425, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">

                            </label>
                            <div class="col-md-7 col-sm-7 ">
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <div class="row">
                                    <input type="submit" value="Submit" class="btn btn-primary col-form-label" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {

        function validateInputs() {
            var val1 = parseInt($('#totalMeeting').val());
            if (!isNaN(val1)) {
                if (val1 > 12) {
                    $('#error').text('Total No. of Meeting is always less than or equal to 12');
                    $('#totalMeeting').val("");
                    return false;
                } else {
                    $('#error').text('');
                    return true;
                }
            } else {
                $('#error').text('');
                return false;
            }
        }

        // Only trigger validation when input2 is typed into
        $('#totalMeeting').on('keyup', validateInputs);

        // Still check on form submit

    });
</script>