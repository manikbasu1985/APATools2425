@model IEnumerable<APATools.Models.ReportModels.APA_MC_3_Report>
@{
    ViewBag.Title = "Report of APA-MC-3";
}
<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Report of APA-MC-3</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Home of @if (Context.Session.GetString("UserInfo") != null)
                    {
                        <small>@Context.Session.GetString("UserInfo")</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">

                <div class="row">
                    <table class="table table-bordered" width="100%" id="reportid">
                        <thead>
                            <tr>
                                <th class="col-form-label">District Name</th>
                                <th class="col-form-label">Block Name</th>
                                <th>GP Name</th>
                                <th>GPCode</th>
                                <th>Financial Year</th>
                                <th>OB_CFC</th>
                                <th>OB_SFC</th>
                                <th>OB_OSR</th>
                                <th>RECPT_CFC_UPTO_DEC_2024</th>
                                <th>RECPT_SFC_UPTO_DEC_2024</th>
                                <th>RECPT_OSR_UPTO_DEC_2024</th>
                                <th>EXP_CFC_UPTO_MAR_2025</th>
                                <th>EXP_SFC_UPTO_MAR_2025</th>
                                <th>EXP_OSR_UPTO_MAR_2025</th>
                                <th>Total_OB</th>
                                <th>Total_Expenditure</th>
                                <th>Total_Receipt</th>
                                <th>Percentage</th>
                                <th>A_APA_MC_3_Result</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-form-label">@item.DISTRICT</td>
                                    <td class="col-form-label">@item.BLOCK</td>
                                    <td>@item.GP</td>
                                    <td>@item.GPCode</td>                                    
                                    <td>@item.FYName</td>
                                    <td>@item.OB_CFC</td>
                                    <td>@item.OB_SFC</td>
                                    <td>@item.OB_OSR</td>
                                    <td>@item.RECPT_CFC_UPTO_DEC_2024</td>
                                    <td>@item.RECPT_SFC_UPTO_DEC_2024</td>
                                    <td>@item.RECPT_OSR_UPTO_DEC_2024</td>
                                    <td>@item.EXP_CFC_UPTO_MAR_2025</td>
                                    <td>@item.EXP_SFC_UPTO_MAR_2025</td>
                                    <td>@item.EXP_OSR_UPTO_MAR_2025</td>
                                    <td>@item.Total_OB</td>
                                    <td>@item.Total_Expenditure</td>
                                    <td>@item.Total_Receipt</td>
                                    <td>@item.Percentage</td>
                                    <td>@item.A_APA_MC_3_Result</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    div.dt-container {
        width: 100%;
        margin: 0 auto;
    }

    .dt-end {
        display: table-cell !important;
    }
</style>
@* Datatable Styles *@
<link href="~/css/dataTables.dataTables.css" rel="stylesheet" />
<link href="~/css/buttons.dataTables.css" rel="stylesheet" />
<link href="~/css/fixedColumns.dataTables.css" rel="stylesheet" />
@section Scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.dataTables.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.print.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#reportid').DataTable({
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh',
                "lengthMenu": [20, 40, 60, 80, 100],
                fixedColumns: {
                    start: 2,
                    end: 2
                },
                layout: {
                    topStart: {
                        buttons: [{
                    extend: 'excelHtml5',
                    title: 'Data export' + "@DateTime.Now"
                }]
                    },
                    bottomStart: {
                        "pageLength": 20,
                    },
                    bottomEnd: {
                        paging: {
                            firstLast: false
                        }
                    },
                }
            });
        });
    </script>
}