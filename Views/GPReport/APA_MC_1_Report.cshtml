@model IEnumerable<APATools.Models.ReportModels.APA_MC_1_Report>
@{
    ViewBag.Title = "Report of APA-MC-1";
}
<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Report of APA-MC-1</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    Home of @if (Context.Session.GetString("UserInfo") != null)
                    {
                        <small>@Context.Session.GetString("UserInfo")</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">


                <div class="row">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th class="col-form-label">GPCode</th>
                                <th  class="col-form-label">GP Name</th>
                                <th  class="col-form-label">Financial Year</th>
                                <th  class="col-form-label">Total Number of GP Members (including EX-Officio) in 2024 - 2025</th>
                                <th  class="col-form-label">Number of GP Members (including EX-Officio) attended in Special General Body Meeting in 2024 - 2025</th>
                                <th  class="col-form-label">Plan Approval Date</th>
                                <th  class="col-form-label">Plan Approval Resolution Doc</th>
                                <th  class="col-form-label">Total Member's Declaration PDF</th>
                                <th  class="col-form-label">Total Member's Declaration Excel</th>
                                <th  class="col-form-label">Edit - Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-form-label">@item.GPCode</td>
                                    <td class="col-form-label">@item.GPName</td>
                                    <td class="col-form-label">@item.FYName</td>
                                    <td class="col-form-label">@item.TotalNoofMember</td>
                                    <td class="col-form-label">@item.NoofMemberAttended</td>
                                    <td class="col-form-label">@item.PlanApprovalDate.ToString("dd-MM-yyyy")</td>
                                    <td class="col-form-label">
                                        <a asp-action="Download" asp-controller="StateDashboard" asp-route-gpcode="@item.GPCode"
                                           asp-route-filename="@item.EvidenceofPlanApprovalResolution_path" class="btn btn-info btn-sm col-form-label">Download</a>
                                    </td>
                                    <td class="col-form-label">
                                        <a asp-action="Download" asp-controller="StateDashboard" asp-route-gpcode="@item.GPCode"
                                           asp-route-filename="@item.TotalMembersDeclaration_pdf_path" class="btn btn-info btn-sm col-form-label">Download</a>
                                        
                                    </td>
                                    <td class="col-form-label">
                                        <a asp-action="Download" asp-controller="StateDashboard" asp-route-gpcode="@item.GPCode"
                                           asp-route-filename="@item.TotalMembersDeclaration_excel_path" class="btn btn-info btn-sm col-form-label">Download</a>
                                        
                                    </td>

                                    @if (item.ActiveStatus == 1)
                                    {
                                        <td class="col-form-label"><a href="#" class="btn btn-warning">Not Allowed</a></td>
                                    }
                                    else if (item.ActiveStatus == 2)
                                    {
                                        <td class="col-form-label"><a class="btn btn-warning" href="@Url.Action("APA_MC_1_Edit","GPEditDashboard", new {id = item.ID})">Edit Entry</a></td>
                                    }
                                    else
                                    {
                                        <td class="col-form-label"><a class="btn btn-danger" href="#">Already Edited</a></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>