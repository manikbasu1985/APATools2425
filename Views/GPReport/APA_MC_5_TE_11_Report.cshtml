@model IEnumerable<APATools.Models.ReportModels.APA_MC_5_TE_11_Report>
@{
    ViewBag.Title = "Report of APA-MC-5 & TE-11";
}
<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Report of APA-MC-5 & TE-11</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    Home of @if (Context.Session.GetString("UserName") != null)
                    {
                        <small>@Context.Session.GetString("UserName")</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <div class="row">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th class="col-form-label">GPCode</th>
                                <th class="col-form-label">GP Name</th>
                                <th class="col-form-label">Financial Year</th>
                                <th class="col-form-label">Audit Opinion</th>
                                <th class="col-form-label">Last Audit Report Received Date</th>
                                <th class="col-form-label">Audit Certificate / Entire Audit Report </th>
                                <th class="col-form-label">General Body Meeting Date on ATR</th>
                                <th class="col-form-label">Genaral Body Meeting Resolution on ATR with Evidance of Submission of ATR</th>
                                <th class="col-form-label">ATR Date on Submission</th>
                                <th class="col-form-label">Edit - Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-form-label">@item.GPCode</td>
                                    <td class="col-form-label">@item.GPName</td>
                                    <td class="col-form-label">@item.FYName</td>
                                    <td class="col-form-label">@item.AuditOpinion</td>
                                    <td class="col-form-label">@item.LastAuditReportReceivedDate.ToShortDateString()</td>
                                    <td class="col-form-label">
                                        <a asp-action="Download" asp-controller="StateDashboard"
                                           asp-route-filename="@item.EvidenceofAuditReportReceived_path" class="btn btn-info btn-sm col-form-label">Download</a>
                                    </td>
                                    <td class="col-form-label">@item.MeetingDateonATR.ToShortDateString()</td>

                                    <td class="col-form-label">
                                        <a asp-action="Download" asp-controller="StateDashboard"
                                           asp-route-filename="@item.ATRResolutionSubmissionDoc_path" class="btn btn-info btn-sm col-form-label">Download</a>
                                    </td>
                                    <td class="col-form-label">@item.ATRSubmissionDate.ToShortDateString()</td>
                                    @if (item.ActiveStatus == 1)
                                    {
                                        <td class="col-form-label"><a href="#" class="btn btn-warning">Not Allowed</a></td>
                                    }
                                    else if (item.ActiveStatus == 2)
                                    {
                                        <td class="col-form-label"><a class="btn btn-warning" href="@Url.Action("APA_MC_5_TE_11_Edit","GPEditDashboard", new {id = item.ID})">Edit Entry</a></td>
                                    }
                                    else
                                    {
                                        <td class="col-form-label"><a class="btn btn-danger" href="#">Already Edited</a></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>