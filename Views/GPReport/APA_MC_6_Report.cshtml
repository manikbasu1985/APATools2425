@model IEnumerable<APATools.Models.ReportModels.APA_MC_6_Report>
@{
    ViewBag.Title = "Report of APA-MC-6";
}
<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Report of APA-MC-6</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    Home of @if (Context.Session.GetString("UserName") != null)
                    {
                        <small>@Context.Session.GetString("UserName")</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <div class="row">
                    <table class="table table-bordered table-responsive" id="reportid">
                        <thead>
                            <tr>
                                <th>GPCode</th>
                                <th>GP Name</th>
                                <th>Financial Year</th>
                                <th>Total Tax in INR 2023 - 2024 </th>
                                <th>Total Non Tax in INR 2023 - 2024</th>
                                <th>Total OSR in INR 2023 - 2024</th>
                                <th>OSR Deduction Amount in INR 2023 - 2024</th>
                                <th>Total Tax in INR 2024 - 2025 </th>
                                <th>Total Non Tax in INR 2024 - 2025</th>
                                <th>Total OSR in INR 2024 - 2025</th>
                                <th>OSR Deduction Amount in INR 2024 - 2025</th>
                                <th>CCER Upload 2024-2025</th>
                                <th>OSR Data to Upload in Prescribed Excel Format</th>
                                <th>Edit - Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.GPCode</td>
                                    <td>@item.GPName</td>
                                    <td>@item.FYName</td>
                                    <td>@item.TotalTaxinINR_2324</td>
                                    <td>@item.TotalNonTaxinINR_2324</td>
                                    <td>@item.TotalOSRinINR_2324</td>
                                    <td>@item.OSRDeductionAmountinINR_2324</td>
                                    <td>@item.TotalTaxinINR_2425</td>
                                    <td>@item.TotalNonTaxinINR_2425</td>
                                    <td>@item.TotalOSRinINR_2425</td>
                                    <td>@item.OSRDeductionAmountinINR_2425</td>
                                    <td>
                                        <a asp-action="Download" asp-controller="StateDashboard" asp-route-gpcode="@item.GPCode"
                                           asp-route-filename="@item.CCERUpload_2024_2025_path" class="btn btn-info btn-sm col-form-label">Download</a>
                                    </td>
                                    <td>
                                        <a asp-action="Download" asp-controller="StateDashboard" asp-route-gpcode="@item.GPCode"
                                           asp-route-filename="@item.OSRDataUpload_path" class="btn btn-info btn-sm col-form-label">Download</a>
                                    </td>
                                    @if (item.ActiveStatus == 1)
                                    {
                                        <td><a href="#" class="btn btn-warning">Not Allowed</a></td>
                                    }
                                    else if (item.ActiveStatus == 2)
                                    {
                                        <td><a class="btn btn-warning" href="@Url.Action("APA_MC_6_Edit","GPEditDashboard", new {id = item.ID})">Edit Entry</a></td>
                                    }
                                    else
                                    {
                                        <td><a class="btn btn-danger" href="#">Already Edited</a></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
