@model APATools.Models.A_APA_MC_2
@{
    ViewData["Title"] = "APA 2024-2025 MC_2";
}
<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Entry of APA-MC-2 Condition</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    GP Dashboard of @if (ViewBag.GPName != null)
                    {
                        <small>@ViewBag.GPName</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <form asp-action="APA_MC_2" asp-controller="GPDashboard" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <h4 class="col-form-label col-md-5 col-sm-5">APA-MC-2 Entry</h4>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                GP Code <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" asp-for="GPCode" class="form-control col-form-label" readonly value="@ViewBag.GPCode" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Financial Year <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <select asp-for="FYCode" class="form-control col-form-label" id="schemetype" required="required">
                                    <option selected value="@ViewBag.FYCode">@ViewBag.FYName</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Nos. of Issued Work Order (April 2024 - March 2025) <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="text" asp-for="NoofIssuedWorkOrder" id="totalWorkOrder" onkeypress="return decimalOnly(event)" class="form-control col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.NoofIssuedWorkOrder, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Nos. of Physically Completed Activities (April 2024 - June 2025)<span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="text" asp-for="NoofPhysicallyCompletedActivities" id="noofPhys" onkeypress="return decimalOnly(event)" class="form-control col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.NoofPhysicallyCompletedActivities, "", new { @class = "text-danger" }) </span>
                                <span id="error" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Status of Physically Completed Activites (April 2024 - June 2025) (Annexure - 2) (.xlsx format - 5 MB) <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" asp-for="DeclarationStatusPhysicalCompletedActivities" class="form-control-file col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.DeclarationStatusPhysicalCompletedActivities, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                @*Template on Status of Physically Completed Actvities (Excel Format (.xlsx)*@
                                Upload Each and Every Work Orders Issued (April 2024 - March 2025) (.pdf / Max 20 MB)<span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" asp-for="DeclarationPlan_Implementation" class="form-control-file col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.DeclarationPlan_Implementation, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Evidence of Completion (Completion Certificates) (PDF Format) (Max 5 MB) <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" asp-for="EvidenceofCompletedActivity" class="form-control-file col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.EvidenceofCompletedActivity, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="submit" value="Submit" class="btn btn-primary col-form-label" />
                            </div>
                        </div>
                        <div class="item form-group col-md-8">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function decimalOnly(evt) {
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            // Check if there's already a decimal point
            var inputValue = evt.target.value;
            if (charCode == 46 && inputValue.indexOf('.') !== -1) {
                return false;
            }
            return true;
        }
    $(document).ready(function () {
        
        function validateInputs() {
            var val1 = parseInt($('#totalWorkOrder').val());
            var val2 = parseInt($('#noofPhys').val());
            if (!isNaN(val1) && !isNaN(val2)) {
                if (val1 < val2) {
                    $('#error').text('Total No. of Work Order is always greater than or equal to Physically Completed Activities');
                    //alert("Total Members is always greater than Attended Members");
                    $('#noofPhys').val("");
                    //$('#attendedNumber').css("border-color","red");
                    //$('#attendedNumber').text("");
                    //
                    return false;
                } else {
                    $('#error').text('');
                    return true;
                }
            } else {
                $('#error').text('');
                return false;
            }
        }

        // Only trigger validation when input2 is typed into
        $('#noofPhys').on('keyup', validateInputs);

        // Still check on form submit
        
    });
</script>

