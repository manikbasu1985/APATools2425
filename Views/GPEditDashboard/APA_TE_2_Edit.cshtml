@model APATools.Models.A_APA_TE_2

@{
    ViewBag.Title = "APA-TE-2";
}

<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Entry of APA-TE-2 </h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    GP Dashboard of @if (ViewBag.GPName != null)
                    {
                        <small>@ViewBag.GPName</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <form asp-action="APA_TE_2_Edit" asp-controller="GPEditDashboard" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <h4 class="col-form-label col-md-5 col-sm-5">APA-TE-2 Entry</h4>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                GP Code <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" asp-for="GPCode" class="form-control col-form-label" readonly value="@Model.GPCode" name="GPCode" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Financial Year <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <select asp-for="FYCode" class="form-control col-form-label" id="schemetype" required="required">
                                    <option selected value="@Model.FYCode">@ViewBag.FYName</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total Budget of Activities ( SFC, CFC and OSR Funds) for 2025 - 2026 FY <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="text" asp-for="TotalBudgetfor2526FY" id="totalBudget" onkeypress="return decimalOnly(event)" class="form-control col-form-label" required />
                                @Html.ValidationMessageFor(model => model.TotalBudgetfor2526FY, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total Budget of Activities having value 3.5 Lakh and above <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="text" asp-for="TotalBudgetmore3_5Lakh" id="totalLakh" onkeypress="return decimalOnly(event)" class="form-control col-form-label" required />
                                @Html.ValidationMessageFor(model => model.TotalBudgetmore3_5Lakh, "", new { @class = "text-danger" })
                                <span id="error" style="color: red"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Upload Form36 (2025 - 2026 FY) (.xlsx Format - Max 10 MB) <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" asp-for="Form36Doc" class="form-control col-form-label" required />
                                @Html.ValidationMessageFor(model => model.Form36Doc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="submit" value="Submit" class="btn btn-primary col-form-label" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function decimalOnly(evt) {
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            // Check if there's already a decimal point
            var inputValue = evt.target.value;
            if (charCode == 46 && inputValue.indexOf('.') !== -1) {
                return false;
            }
            return true;
        }
    $(document).ready(function () {

        function validateInputs() {
            var val1 = parseInt($('#totalBudget').val());
            var val2 = parseInt($('#totalLakh').val());
            if (!isNaN(val1) && !isNaN(val2)) {
                if (val1 < val2) {
                    $('#error').text('Total No. of Budget is always greater than or equal to 3 lakh Plans');
                    //alert("Total Members is always greater than Attended Members");
                    $('#totalLakh').val("");
                    //$('#attendedNumber').css("border-color","red");
                    //$('#attendedNumber').text("");
                    //
                    return false;
                } else {
                    $('#error').text('');
                    return true;
                }
            } else {
                $('#error').text('');
                return false;
            }
        }

        // Only trigger validation when input2 is typed into
        $('#totalLakh').on('keyup', validateInputs);

        // Still check on form submit

    });
</script>