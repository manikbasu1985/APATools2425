@model APATools.Models.A_APA_TE_4

@{
    ViewBag.Title = "APA-TE-4";
}

<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Entry of APA-TE-4 </h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">

                <h2>
                    GP Dashboard of @if (ViewBag.GPName != null)
                    {
                        <small>@ViewBag.GPName</small>
                    }
                </h2>
                <div class="clearfix"></div>
            </div>
            @if (TempData["Failed"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-danger">
                        @TempData["Failed"]
                    </div>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <form asp-action="APA_TE_4_Edit" asp-controller="GPEditDashboard" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <h4 class="col-form-label col-md-5 col-sm-5">APA-TE-4 Entry</h4>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                GP Code <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" class="form-control col-form-label" readonly value="@Model.GPCode" name="GPCode" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Financial Year <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <select name="FYCode" class="form-control col-form-label" id="schemetype" required="required">
                                    <option selected value="@Model.FYCode">@ViewBag.FYName</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total No. of Activities recommended in Gram Sabha  <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" class="form-control col-form-label" id="totalRecom" required asp-for="TotalnoofActivitiesofGramSabha" />
                                @Html.ValidationMessageFor(model => model.TotalnoofActivitiesofGramSabha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total No. of Activities Captured in approved plan from Gram Sabha's recommandation <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="number" class="form-control col-form-label" id="totalRecomNo" required asp-for="TotalnoofActivitiesRecomendedByGramSabha" />
                                @Html.ValidationMessageFor(model => model.TotalnoofActivitiesRecomendedByGramSabha, "", new { @class = "text-danger" })
                                <span id="error" style="color: red"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-6 col-sm-6 label-align" for="last-name">
                                To Upload Copy of Gram Sabha Meeting Resolution with Highlighting Gram Sabha Recommended Activities along with Plan ID List (Max 5 MB/ pdf)<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="file" asp-for="GramSavaMeetingResolution" class="form-control col-form-label" required />
                                @Html.ValidationMessageFor(model => model.GramSavaMeetingResolution, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-6 col-sm-6 label-align" for="last-name">
                                Declaration as on Annexure 6  (Max 5 MB / pdf)<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="file" asp-for="DeclarationofAnnex6" class="form-control col-form-label" required />
                                @Html.ValidationMessageFor(model => model.DeclarationofAnnex6, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <hr />


                    <div class="row">
                        <div class="item form-group col-md-8">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="submit" value="Submit" class="btn btn-primary col-form-label" />
                            </div>
                        </div>
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    $(document).ready(function () {

        function validateInputs() {
            var val1 = parseInt($('#totalRecom').val());
            var val2 = parseInt($('#totalRecomNo').val());
            if (!isNaN(val1) && !isNaN(val2)) {
                if (val1 < val2) {
                    $('#error').text('Total No. of Budget is always greater than or equal to 3 lakh Plans');
                    //alert("Total Members is always greater than Attended Members");
                    $('#totalRecomNo').val("");
                    //$('#attendedNumber').css("border-color","red");
                    //$('#attendedNumber').text("");
                    //
                    return false;
                } else {
                    $('#error').text('');
                    return true;
                }
            } else {
                $('#error').text('');
                return false;
            }
        }

        // Only trigger validation when input2 is typed into
        $('#totalRecomNo').on('keyup', validateInputs);

        // Still check on form submit

    });
</script>