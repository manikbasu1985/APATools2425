@model APATools.Models.A_APA_MC_1
@{
    ViewData["Title"] = "APA 2024-2025 MC_1";
}

<div class="page-title">
    <div class="title_left">
        <h3>Welcome to the Dashboard!</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Home of <small>
                        @if (Context.Session.GetString("UserInfo") != null)
                            @Context.Session.GetString("UserInfo")
                        
                            -
                        </small>
                    </h2>
                    <div class="clearfix"></div>
                </div>
                @if (TempData["Failed"] != null)
                {
                    <div class="x_content">
                        <div class="alert alert-danger">
                            @TempData["Failed"]
                        </div>
                    </div>
                }
            @if (TempData["Success"] != null)
            {
                <div class="x_content">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }
            <div class="x_content">
                <form asp-action="APA_MC_1_Edit" asp-asp-controller="GPEditDashboard" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <h4 class="col-form-label col-md-5 col-sm-5">APA-MC-1 Entry</h4>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                GP Code <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="text" asp-for="GPCode" class="form-control col-form-label" readonly value="@Model.GPCode" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Financial Year <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <select asp-for="FYCode" class="form-control col-form-label" id="schemetype" required="required" readonly>
                                    <option selected value="@Model.FYCode">@ViewBag.FYName</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total Number of GP Members (including EX-Officio) in 2024 - 2025 <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input asp-for="TotalNoofMember" id="totalNumber" type="number" class="form-control col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.TotalNoofMember, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Number of GP Members (including EX-Officio) attended in Special General Body Meeting in 2024 - 2025 <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input asp-for="NoofMemberAttended" id="attendedNumber" class="form-control col-form-label" required type="number" />
                                <span>@Html.ValidationMessageFor(model => model.NoofMemberAttended, "", new { @class = "text-danger" }) </span>
                                <span id="error" style="color:red;"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Plan Approval Resolution Doc (Max 5 MB in pdf) <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" asp-for="EvidenceofPlanApprovalResolution" class="form-control col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.EvidenceofPlanApprovalResolution, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total Member's Declaration (Max 5 MB in PDF)  <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" id="formFile" asp-for="TotalMembersDeclaration_pdf" class="form-control form-control-sm mb-3  col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.TotalMembersDeclaration_pdf, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-4">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Total Member's Declaration (Max 5 MB in Excel)  <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="file" id="formFile" asp-for="TotalMembersDeclaration_excel" class="form-control form-control-sm mb-3  col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.TotalMembersDeclaration_excel, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Plan Approval Date <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="date" asp-for="PlanApprovalDate" id="myDate" class="form-control col-form-label" required />
                                <span>@Html.ValidationMessageFor(model => model.PlanApprovalDate, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                Single Agenda Meeting <span class="required">*</span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <select asp-for="SingleAgendaMeeting" class="form-control col-form-label" required>
                                    <option value="">-- Select --</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                                <span>@Html.ValidationMessageFor(model => model.SingleAgendaMeeting, "", new { @class = "text-danger" }) </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <input type="submit" value="Submit" class="btn btn-primary col-form-label" />
                            </div>
                        </div>
                        <div class="item form-group col-md-6">
                            <label class="col-form-label col-md-5 col-sm-5 label-align" for="last-name">
                                <span class="required"></span>
                            </label>
                            <div class="col-md-7 col-sm-7 ">
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        function validateInputs() {
            var val1 = parseInt($('#totalNumber').val());
            var val2 = parseInt($('#attendedNumber').val());
            if (!isNaN(val1) && !isNaN(val2)) {
                if (val1 < val2) {
                    $('#error').text('Total Members is always greater than or equal to Attended Members');
                    //alert("Total Members is always greater than Attended Members");
                    $('#attendedNumber').val("");
                    //$('#attendedNumber').css("border-color","red");
                    //$('#attendedNumber').text("");
                    //
                    return false;
                } else {
                    $('#error').text('');
                    return true;
                }
            } else {
                $('#error').text('');
                return false;
            }
        }

        // Only trigger validation when input2 is typed into
        $('#attendedNumber').on('keyup', validateInputs);

        // Still check on form submit
            const today = new Date().toISOString().split('T')[0];
    document.getElementById("myDate").setAttribute('max', today);
    });
</script>
